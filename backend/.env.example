# Backend Application Configuration
# Copy this file to .env and modify as needed
# Note: Docker-specific URLs (like service names) are set in docker-compose.yml

# Application
LOG_LEVEL=INFO
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ColPali
COLPALI_URL=http://localhost:7000

# DeepSeek OCR (NVIDIA GPU Required)
# Set to false if you don't have a GPU
DEEPSEEK_OCR_ENABLED=true
DEEPSEEK_OCR_URL=http://localhost:8200
DEEPSEEK_OCR_MODE=Gundam
DEEPSEEK_OCR_TASK=markdown
DEEPSEEK_OCR_INCLUDE_GROUNDING=true
DEEPSEEK_OCR_INCLUDE_IMAGES=true

# Processing
BATCH_SIZE=4

# Qdrant
QDRANT_EMBEDDED=false
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION_NAME=documents
QDRANT_SEARCH_LIMIT=20

# Upload Controls
UPLOAD_MAX_FILE_SIZE_MB=10
UPLOAD_MAX_FILES=5

# Local Storage
# For Docker: use /app/storage (default)
# For local development: use a relative path like ./storage
LOCAL_STORAGE_PATH=/app/storage
LOCAL_STORAGE_PUBLIC_URL=http://localhost:8000/files
LOCAL_STORAGE_BUCKET_NAME=documents

# DuckDB
DUCKDB_ENABLED=false
DUCKDB_URL=http://localhost:8300
DUCKDB_DATABASE_NAME=documents
