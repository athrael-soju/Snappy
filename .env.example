########################################
# SNAPPY CONFIGURATION
########################################
# Copy this file to .env and modify as needed.
# For Docker deployments, most values work as-is.
# For local development, update service URLs to localhost.
########################################

########################################
# Core Application
########################################
LOG_LEVEL=INFO
# CORS origins (comma-separated). Use * for development only!
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

########################################
# Qdrant Vector Database
########################################
# Collection name for your documents (also used for storage bucket name)
QDRANT_COLLECTION_NAME=documents
# Use embedded Qdrant (true for single-machine, false for external service)
QDRANT_EMBEDDED=false
QDRANT_URL=http://localhost:6333

########################################
# Document Processing
########################################
# Pages processed per batch (2-4 for CPU, 4-8 for GPU)
BATCH_SIZE=4
# Number of search results to return
QDRANT_SEARCH_LIMIT=20

########################################
# Upload Limits
########################################
UPLOAD_MAX_FILE_SIZE_MB=10
UPLOAD_MAX_FILES=5

########################################
# Local Storage
########################################
LOCAL_STORAGE_PATH=/app/storage
LOCAL_STORAGE_PUBLIC_URL=http://localhost:8000/files
LOCAL_STORAGE_BUCKET_NAME=documents

########################################
# ColPali Embedding Service
########################################
COLPALI_URL=http://localhost:7000
# Automatically detects and uses GPU/Apple Silicon/CPU at runtime

########################################
# DeepSeek OCR (NVIDIA GPU Required)
########################################
# This service requires an NVIDIA GPU with CUDA support
# Set to false if you don't have a GPU
DEEPSEEK_OCR_ENABLED=true
DEEPSEEK_OCR_URL=http://localhost:8200
# OCR quality mode: Gundam (balanced), Tiny (fast), Small, Base, Large (high quality)
DEEPSEEK_OCR_MODE=Gundam
# Task type: markdown (structured), plain_ocr (simple text)
DEEPSEEK_OCR_TASK=markdown

########################################
# OpenAI (for Chat Feature)
########################################
OPENAI_API_KEY=your-api-key-here
OPENAI_MODEL=gpt-5-nano
OPENAI_TEMPERATURE=1

########################################
# Frontend (Next.js)
########################################
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
